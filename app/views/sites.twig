<table class="table table-striped">
    <thead>
    <tr>
        <th>Sivusto</th>
        <th>Piiri</th>
        <th>Puolue</th>
        <th>Tarkastettu</th>
        <th>Linkki</th>
    </tr>
    </thead>
    <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="/site/{{ site._id }}/">{{ site.name }}</a></td>
                <td><a href="/a/{{ site.area }}"/>{{ site.area }}</a></td>
                <td><a href="/p/{{ site.party }}"/>{{ site.party }}</a></td>
                <td>{{ site.updated_at|date("m.d.Y H:i", "Europe/Helsinki") }}</td>
                <td><a href="{{ site.url }}" target="_blank">{{ site.url }}</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
