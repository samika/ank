<table class="table table-striped">
    <thead>
    <tr>
        <th>Sivusto</th>
        <th>Viimeinen tarkastus</th>
        <th>Linkki</th>
    </tr>
    </thead>
    <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="/site/{{ site._id }}/">{{ site.name }}</a></td>
                <td>{{ site.updated_at }}</td>
                <td><a href="{{ site.url }}" target="_blank">{{ site.url }}</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>