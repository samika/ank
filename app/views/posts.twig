<table class="table table-striped">
    <thead>
    <tr>
        <th>Otsikko</th>
        <th>Tarkastettu</th>
        <th>Muutoksia</th>
        <th>Linkki</th>
        <th>Vihjaa muutoksesta</yh>
    </tr>
    </thead>
    <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.updated_at|date("m.d.Y H:i", "Europe/Helsinki") }}</td>
                <td>
                    {% if post.modificationCount > 1 %}
                        <a href="/diff/{{ post._id }}/">{{ post.modificationCount }}</a>
                    {% else %}
                        {{ post.modificationCount }}
                    {% endif %}

                </td>
                <td><a href="{{ post.url }}" alt="{{ post.content }}" target="_blank">{{ post.url }}</a></td>
                <td><a href="/requeue/{{ post._id }}/" rel="nofollow" class="glyphicon glyphicon-hand-left"></a>
            </tr>
        {% endfor %}
    </tbody>
</table>
